{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "../dist",
    "./node_modules",
    "./src/components",
    "./src/builderRegistry.ts"
  ]
}
